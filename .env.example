# Next.js
NODE_ENV="development"

# Database
DATABASE_URL="file:./db.sqlite"

# Environment
NEXT_PUBLIC_DB_ENV="development"

# NextAuth
NEXTAUTH_SECRET="your-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Email (for magic link auth)
EMAIL_SERVER_HOST="localhost"
EMAIL_SERVER_PORT="1025"
EMAIL_SERVER_USER="user"
EMAIL_SERVER_PASSWORD="pass"
EMAIL_FROM="noreply@changeme.com"

# External API
API_KEY="your-api-key-here"

# SMS/Twilio Integration
SMS_BASE_URL="http://localhost:3000/"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_MESSAGING_SERVICE_SID="your-twilio-messaging-service-sid"

# S3 Configuration
# For Local Development with MinIO (docker-compose):
AWS_ACCESS_KEY_ID="minioadmin"
AWS_SECRET_ACCESS_KEY="minioadmin"
AWS_REGION="us-east-1"
S3_BUCKET_NAME="uploads"
S3_ENDPOINT="http://localhost:9000"
S3_FORCE_PATH_STYLE="true"

# For Production with AWS S3:
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="us-east-1"
# S3_BUCKET_NAME="your-bucket-name"
# S3_ENDPOINT= # Leave empty for AWS S3
# S3_FORCE_PATH_STYLE="false" # or leave empty

# Upload limits (optional - these are defaults)
# S3_UPLOAD_MAX_FILE_SIZE="52428800" # 50MB in bytes
# S3_UPLOAD_MAX_FILES="6"
